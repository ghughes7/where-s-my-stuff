<?xml version="1.0" encoding="utf-8"?>

<!-- Controls the how the Login button looks -->

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- When the button is pressed make it look like button_pressed.png -->
    <item android:state_pressed="true"
        android:drawable="@drawable/button_pressed" />
    
    <!-- 
    	When the button is focused make it look like login_focused.png 
    	focused means it is scrolled on by the dpad or trackball
    -->
    <item android:state_focused="true"
        android:drawable="@drawable/login_focused" />
    
    <!-- Default button view -->
    <item android:drawable="@drawable/button_design" />

</selector>