<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="item_profile_image"
        android:src="@drawable/ic_launcher" />

    <!-- Displays the user's name -->

    <TextView
        android:id="@+id/fullNameText"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- Displays the user's phone number, if applicable -->

    <TextView
        android:id="@+id/phoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignLeft="@+id/fullNameText"
        android:layout_below="@+id/fullNameText"
        android:text="phone"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Displays the user's email address -->

    <TextView
        android:id="@+id/emailAddressText"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignLeft="@+id/phoneNumberText"
        android:layout_below="@+id/phoneNumberText"
        android:text="email"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Displays the Add Item Button -->

    <Button
        android:id="@+id/addItem"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/buttons"
        android:text="Add Item" />
    <!-- Displays the second item on the list -->


    <!-- Displays the first item on the list -->


    <!-- Displays the third item on the list -->

    <EditText
        android:id="@+id/itemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:clickable="false"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/listItem"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_above="@+id/addItem"
        android:layout_alignLeft="@+id/addItem"
        android:layout_marginBottom="17dp"
        android:background="@drawable/buttons"
        android:text="View Your Items" />

</RelativeLayout>